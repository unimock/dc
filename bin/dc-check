#!/bin/bash
echo "##############################################################"
echo "#  !!! dc-check is deprecated, use \"dc inspect\" instead !!!  #"
echo "##############################################################"
ret=0
if [ "$1" = "hosts" ] ; then
  if [ "$2" != "" ] ; then
    dc-info -h "$2" inspect
    ret=$?
  else
    dc-info inspect
    ret=$?
  fi
echo "##############################################################"
echo "#  !!! dc-check is deprecated, use \"dc inspect\" instead !!!  #"
echo "##############################################################"
fi
exit $ret
