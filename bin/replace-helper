#!/bin/bash



if [ "$1" = "" ] ; then
  echo ""
  echo "usage:"
  echo ""
  echo "./replace /root '/root/Services' '"'${MDE_DC_SERV_DIR}'"'"
  echo ""
  exit 0
fi



  echo "#########################################"
  echo "" 
  ( cd $1 && grep -r --exclude-dir={logs,Archive,gitrep,.vim,.viminfo,updates} --exclude={.bash_history,.viminfo,dc.yml} "$2" . )
  echo ""
  echo "#########################################"

  if [ "$3" != "" ] ; then
    echo ""
    list=$( cd $1 && grep -rl --exclude-dir={logs,Archive,gitrep,.vim,.viminfo,updates} --exclude={.bash_history,.viminfo,dc.yml} "$2" . )
    for i in $list ; do
      echo "(cd $1 && sed -i 's|$2|$3|g' $i)"
    done
    echo ""
  fi
exit


