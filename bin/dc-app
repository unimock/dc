#!/bin/bash

. /opt/dc/funcs/global

_show_help() {
  echo ""
  echo " usage: `basename $0` <project>"
  echo ""
  echo "tbd    list                # list projects on $H"
  echo "tbd    check               # check projects on $H"
  echo "tbd    check details       # check projects on $H and show details"
  echo "tbd    stop|start          # start or stop all projects on $H"
  echo "tbd    rm|up|rmup          # start or stop all projects on $H"
  echo "tbd    ps                  # show project containers on $H"
  echo ""
}


verbose=""
CURROPT=""
while [ "$#" -gt 0 ]; do
  case "$1" in
    -v) verbose="1"               ; shift 1 ;;
    *)  CURROPT="$CURROPT \"$1\"" ; shift 1 ;;
  esac
done
eval set -- $CURROPT

if [ "$1" = "" ] ; then
  _show_help
  exit 0
fi

echo $*
project=$1
shift
CMD="$1"
shift

if [ "$CMD" = "config"  ] ; then
  cmd=$1
  shift
  dc-config $cmd project ${project} $@
  exit $?
fi
exit 0
