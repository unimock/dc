#!/bin/bash

. /opt/dc/funcs/global

HOST=`hostname`
SERVICE=`basename $PWD`


_help()
{
  echo " usage:"
  echo ""
  echo "        ls|rm|up|logs"
  echo ""
  echo "        sync      <node> [real]   ..................... sync Service/Data directories to node"
  echo "        pull|push <node> peristent|service [real]   ... pull service or persistentn data from node"
  echo ""           
  exit 0
}

CMD=$1

if [ "$CMD" = "" ] ; then
  _help
fi

if [ "$CMD" = "sync" ] ; then
  NODE=$2
  REAL=$3
  if [ "$2" = "" ] ; then
    _help
  fi
  dc-rdc $HOST rdc sync ${MDE_DC_DOCKER_VOL}/Services/${SERVICE} rdc-${NODE}:${MDE_DC_DOCKER_VOL}/Services/${SERVICE} ${REAL}
  dc-rdc $HOST rdc sync ${MDE_DC_DOCKER_VOL}/Data/${SERVICE}     rdc-${NODE}:${MDE_DC_DOCKER_VOL}/Data/${SERVICE}     ${REAL}
  exit 0
fi

if [ "$CMD" = "pull" -o "$CMD" = "push" ] ; then
  NODE=$2
  DIR=$3
  REAL=$4
  if [ "$DIR" != "persistent" -a "$DIR" != "service" ] ; then
    _help
  fi
  if [ "$CMD" = "pull" ] ; then
    dc-rdc $HOST rdc sync rdc-${NODE}:${MDE_DC_DOCKER_VOL}/Services/${SERVICE}/${DIR}   ${MDE_DC_DOCKER_VOL}/Data/root/Swarm/${SERVICE}/${DIR}    ${REAL}
  elif [ "$CMD" = "push" ] ; then
    dc-rdc $HOST rdc sync ${MDE_DC_DOCKER_VOL}/Data/root/Swarm/${SERVICE}/${DIR}      rdc-${NODE}:${MDE_DC_DOCKER_VOL}/Services/${SERVICE}/${DIR} ${REAL}
  fi
  exit 0
fi


if [ -e ./swarm.control ] ; then
  ./swarm.control $*
  exit 0
fi

if [ "$CMD" = "up" ] ; then
  docker stack deploy -c ./swarm-docker-compose.yml ${SERVICE}
  exit 0
fi

if [ "$CMD" = "rm" ] ; then
  docker stack rm ${SERVICE}
  exit 0
fi

if [ "$CMD" = "ls" ] ; then
  docker stack services ${SERVICE} | grep -v "^ID"
  exit 0
fi
if [ "$CMD" = "logs" ] ; then
  docker service ${SERVICE} logs
fi
