#!/bin/bash

printf "%-60s # %s %s\n" "dc $*" "$(date +'%Y-%m-%d %H:%M:%S')" "$(ps -o comm= $PPID)"  >> /tmp/.dc-history



if [ "$1" = "install" ] ; then
  shift
  /opt/dc/bin/dc-install $@
  exit $?
fi

. /opt/dc/funcs/global

####################################################################################################################################
show_help() {
  echo ""
  echo "docker cluster manager"
  echo ""
  echo ""
  echo " usage: `basename $0` [<options>] [<cluster-command>|<project-command>|<container-command>] ..."
  echo ""
  echo "   options:"
  echo ""
  echo "     -i <host-index>  ........... work with host from ${MDE_DC_YAML_FILE}  0|1|2|.."
  echo "     -c <path>/${MDE_DC_YAML_FILE} ... work with project (can also be a directory)"
  echo "     -h <host> .................. work with this host, instead of the one which is defined in the project ${MDE_DC_YAML_FILE} file"
  echo "     -p <project> ............... work with this project"
  echo "     -v ......................... verbose"
  echo ""
  echo "   cluster-commands:"
  echo ""
  echo "     readme                        # show README.md"
  echo "     versions                      # show versions"
  echo "     completion                    # source bash completion like: echo 'source <(dc completion)' >> ~/.bash_aliases"
  echo "     ssh-control-reset             # remove ssh control sockets"
  echo "     install ...                   # dc installation and update functions"
  echo "     ls [--help]                   # list hosts"
  echo "     list ...                      # list hosts/projects"
  echo "     config ...                    # manage dc configurations"
  echo "     host ...                      # manage hosts and projects on host"
  echo "     mounts [umount] ...           # list/unmount all projects mounts to hosts"
  echo "     inspect ...                   # print config and/or runtime informations about the dc cluster"
  echo "     vserver ...                   # manage virtual servers and aassign the to host definition"
  echo "     batch ...                     # manage job batches"
  echo "     docker|compose|swarm          # delegate command to standard tools"
  echo "     ssh [<cmd>]                   # login into a host"                          
  echo "     manage ...                    # sync projects between hosts"
  echo "     hcloud ...                    # link to comptible hcloud version"
  echo ""
  echo "  build and deploy images on host:"
  echo ""
  echo "     build                         # build image according docker-compose.yml on target host"
  echo "     docker login                  # auth for dockerhub"
  echo "     docker push <image-name>      # push image from target host to dockerhub"
  echo ""
  echo "   project-commands"
  echo ""
  echo "     rmup|up|rm|down|ps|start|stop # control projects"
  echo "     logs [-f]|stop|start          # print logs from service console"
  echo "     data pull|push ${MDE_DC_VOL_N_CFG}|c|${MDE_DC_VOL_N_VAR}|v|cv [real|r] # sync ${MDE_DC_VOL_N_CFG} and ${MDE_DC_VOL_N_VAR} data"
  echo "     data mount|umount             # mount p${MDE_DC_VOL_N_CFG} and ${MDE_DC_VOL_N_VAR} data to ./data"
  echo ""
  echo "   container-commands:"
  echo ""
  echo "     login [command]               # login or run a command within <$DCN>."
  echo "     cmd   [command]               # run a command within <$DCN> without terminal (cron jobes, ..)."
  echo "     supervisor                    # connect to supervisord (help|quit|start|stop|restart)"
  echo "     syslog                        # print last lines from syslog"
  echo "     ovw push                      # push the content of </service/ovw> to </> within the container."
  echo "     ovw fetch                     # copy a file or directory from </> to </service/ovw/> within the container."
  echo "     ovw diff <file>               # compare a overwrite file"
  echo ""
  echo ""
  echo "important user commands:"
  echo ""
  echo "  dc versions                                # show versions"
  echo "  dc ssh-control-reset                       # remove ssh control sockets"
  echo ""
  echo "  dc ls hosts [--inspect]                    # show defined hosts (check state with --inspect)"
  echo "  dc ls projects [--inspect]                 # show defined project services (check state with --inspect)"
  echo ""
  echo "  dc host <name> config create <hname_or_ip> # define new host from template"
  echo "  dc host <name> config edit                 # modify host definition file"
  echo "  dc host <name> config delete               # delete host"
  echo "  dc host <name> ip|state                    # get fqdn, state of host"
  echo ""
  exit 0
}
####################################################################################################################################
#
# magic main
#
####################################################################################################################################
if [ "${1}" = "versions" ] ; then
 echo "dc-$(cat /opt/dc/VERSION)"
 /opt/dc/external/yq -V
 /opt/dc/external/hcloud version
 exit 0
fi

if [ "${1}" = "readme" ] ; then
  if [ "${2}" = "" ] ; then
    cat /opt/dc/README.md
  else
    vi /opt/dc/README.md
  fi
fi
if [ "${MDE_DC_VOL}" = "" ] ; then
  echo " ❌ MDE_DC_VOL not set in </opt/dc/bin/dc-config> "
  exit 1
fi

if [ "${MDE_DC_HOST_DIR}" = "" ] ; then
  echo " ❌ MDE_DC_HOST_DIR not set in </opt/dc/bin/dc-config> "
  exit 1
fi
if [ "$1" = "completion" ] ; then
  cat /opt/dc/funcs/bash-completion
  exit 0
fi

HOST=""
SERVICE=""
CONF=""
VERB=""
HIDX="0"
PROJECT_DIR=""

if [ "$1" = "mounts" ] ; then
  if [ "$2" != "umount" ] ; then
    mount | grep fuse.sshfs
    exit 0
  fi
  if [ "$2" = "umount" ] ; then  
    list=$( mount | grep fuse.sshfs | grep "${MDE_DC_VOL}"  | cut -d " " -f1 )
    for i in $list ; do
      umount $i
      echo unmounting: $i
    done
  fi
  exit 0 
fi
if [ "$1" = "ssh-control-reset" ] ; then
  rm -fv  $HOME/.dc/var/ssh/control/*
  exit 0
fi
wrapper_list="inspect host project install vserver batch list manage config ls vserver hcloud kvm"
for i in $wrapper_list ; do
  if [ "$1" = "$i" ] ; then
    shift
    /opt/dc/bin/dc-$i $@
    exit $?
  fi  
done


CURROPT=""
while [ "$#" -gt 0 ]; do
  case "$1" in
    -v)  VERB="1"           ; shift 1 ;; 
    -h)  HOST="$2"          ; shift 2 ;;
    -h*) HOST="${1#-h}"     ; shift 1 ;;
    -p)  SERVICE="$2"       ; shift 2 ;; 
    -p*) SERVICE="${1#-s}"  ; shift 1 ;;
    -i)  HIDX="$2"          ; shift 2 ;; 
    -i[0-9]) HIDX="${1#-i}" ; shift 1 ;; 
    -c)  CONF="$2"          ; shift 2 ;;
    -d)  PROJECT_DIR="$2"   ; shift 2 ;;
    *)   CURROPT="$CURROPT \"$1\"" ; shift 1 ;;
  esac
done  
eval set -- $CURROPT

CMD=${1}

if [ "$CMD" = "" ] ; then
  show_help
fi
if [[ "$CMD" == "ssh" && "$HOST" != "" ]] ; then
  shift
  ssh $HOST $*
  exit $?
fi

if [[ "$CMD" == "docker" && "$HOST" != "" ]] ; then
  shift
  export DOCKER_HOST="ssh://${HOST}"
  docker $*
  exit $ret
fi  

######################################################################################################################################
project_dir=""
if [[ "$CONF" != "" ]] ; then
  if [[ ! -f $CONF && ! -d $CONF ]] ; then
    echo "error: given project is neither a file nor a directory."
    exit 1
  fi
  if [ -f $CONF ] ; then
    project_dir="$( cd `dirname $CONF` ; pwd)"
  else
    project_dir="$( cd $CONF ; pwd)"
  fi
  if [ "${SERVICE}" != "" ] ; then
    echo "error: it is not allowed to enter project file and project"
    exit 1
  fi
fi
if [ "${SERVICE}" != "" ] ; then
  project_dir=$( dc-yq '.projects.'$SERVICE'.project_dir' ${MDE_DC_YAML} )
  if [ "$project_dir" = "null"  ] ; then
    echo "error: unkown project given."
    exit 1
  fi
fi
if [[ "$project_dir" == "" && -f ./${MDE_DC_YAML_FILE} ]] ; then
  project_dir="$(pwd)"
fi
if [[ "$project_dir" == "" ]] ; then
  echo "error: no valid project given"
  exit 1
fi
#echo "project_dir=$project_dir"

# HIDX und HOST parameter auswerten und pruefen

HNAME=""
if [ "$HOST" != "" ] ; then
  found="0"
  hlist=$(dc-yq '(( .projects.* | select(.project_dir == "'$project_dir'" ) ) | .dc.home.[].host  )' ${MDE_DC_YAML} )
  for i in $hlist ; do
    if [ "$i" = "$HOST" ] ; then
      found="1"
      break
    fi
  done
  if [ "$found" != "1" ] ; then
    echo "error: host=$HOST not valid."
    exit 1
  fi
  HNAME=$HOST
else
  HNAME=$( dc-yq '(( .projects.* | select(.project_dir == "'$project_dir'" ) ) | .dc.home.['$HIDX'].host  )' ${MDE_DC_YAML} )
  if [ "$HNAME" = "null" ] ; then
    echo "error: host_index=$HIDX not valid."
    exit 1
  fi
fi

if [ "$CMD" = "vol" ] ; then
  #if [ "$(pwd)" = "$project_dir" ] ; then
  if [ "$SERVICE" = "" ] ; then
    SERVICE=$( dc-yq '(( .projects.* | select(.project_dir == "'$project_dir'") | path ) [-1] )' ${MDE_DC_YAML}  )

 
  fi
  echo "pwd=$(pwd)"
  #echo "project_dir=$project_dir"
  echo "TBD:"
  echo " HNAME=$HNAME"
  echo " project=$SERVICE"
  echo " list|mount|umount|pull|push"
  echo " <cmd> Project/cfg, Project, Backup, Logs, /Volumes/xzy"
  exit 0
fi


export DOCKER_HOST="ssh://${HNAME}"
cd $project_dir

case "$CMD" in
  ssh)
    shift
    ssh ${HNAME} $*
    exit $?
    ;;
  up)
    docker compose up --quiet-pull -d
    ;;
  rm)
    docker compose stop ; docker compose rm -f
    ;;
  down)
    docker compose down
    ;;
  rmup)
    docker compose stop ; docker compose rm -f ; docker compose up --quiet-pull -d
    ;;
  pull)
    docker compose pull
    exit 0
    ;;
  data)
    scmd=$2
    project_name=$( dc-yq '(( .projects.* | select(.project_dir == "'$project_dir'" ) | path ) [-1] )' ${MDE_DC_YAML}  )
    if [ "$scmd" = "mount" ] ; then
      mkdir -p ./data
      sshfs $HNAME:/${MDE_DC_VOL_Projects}/${project_name} ./data
      exit $?
    fi
    if [ "$scmd" = "umount" ] ; then
      umount ./data
      rmdir ./data
    fi
    type=${3%/}
    DRY=" --dry-run " ; if [ "$4" = "real" -o "$4" = "r" ] ; then DRY="" ; fi
    if   [ "$type" = "cv" ] ; then list="${MDE_DC_VOL_N_CFG} ${MDE_DC_VOL_N_VAR}"
    elif [ "$type" = "s"  ] ; then list="${MDE_DC_VOL_N_CFG}"
    elif [ "$type" = "p"  ] ; then list="${MDE_DC_VOL_N_VAR}"
    else   list="$type" ; fi
    for TYPE in $list ; do
      LDIR=./$TYPE
      if [ "$TYPE" != "${MDE_DC_VOL_N_VAR}" -a "$TYPE" != "${MDE_DC_VOL_N_CFG}" ] ; then
        echo "error neither ${MDE_DC_VOL_N_VAR} nor ${MDE_DC_VOL_N_CFG} given."
        exit 0
      fi
      if [ "$scmd" = "push" ] ; then
        ssh ${HNAME}  mkdir -p /${MDE_DC_VOL_Projects}/${project_name}
        rsync  ${DRY} -arvzS --numeric-ids --delete -e "ssh" \
               ${LDIR}/ ${HNAME}:/${MDE_DC_VOL_Projects}/${project_name}/$TYPE
        echo "push $DRY folder FROM <${LDIR}> TO <$HNAME> (<${HNAME}:/${MDE_DC_VOL_Projects}/${project_name}/$TYPE>)"
      elif [ "$scmd" = "pull" ] ; then
        ssh ${HNAME} ls -d /${MDE_DC_VOL_Projects}/${project_name}/$TYPE >/dev/null 2>&1
        if [ "$?" = "0" ] ; then
          mkdir -p ${LDIR}
          rsync   ${DRY} -arvzS --numeric-ids --delete -e "ssh" \
                  ${HNAME}:/${MDE_DC_VOL_Projects}/${project_name}/$TYPE/ ${LDIR}
          echo "pull $DRY folder FROM <$HNAME> (<${HNAME}:/${MDE_DC_VOL_Projects}/${project_name}/$TYPE>) TO <./${TYPE}> done." 
        else
          if [ -d ./${TYPE} ] ; then
            echo "WARNING ./${TYPE} only exists locally!"  
            exit 1
          fi
        fi
      fi
    done
    ;;
  ############
  supervisor)
    main_service=$(dc-yq '(( .projects.* | select(.project_dir == "'$project_dir'" ) ) | .dc.main_service  )' ${MDE_DC_YAML} )
    docker compose exec ${main_service} supervisorctl
    ;;
  syslog)
    main_service=$(dc-yq '(( .projects.* | select(.project_dir == "'$project_dir'" ) ) | .dc.main_service  )' ${MDE_DC_YAML} )
    docker compose exec ${main_service} tail -n 200 /var/log/syslog
    ;;
  login)
    shift
    if [ "$1" = "" ] ; then
      cmd="sh"
    else
      cmd=$*
    fi
    main_service=$(dc-yq '(( .projects.* | select(.project_dir == "'$project_dir'" ) ) | .dc.main_service  )' ${MDE_DC_YAML} )
	  docker compose exec  ${main_service} $cmd
    ;;
  cmd)
    shift
    main_service=$(dc-yq '(( .projects.* | select(.project_dir == "'$project_dir'" ) ) | .dc.main_service  )' ${MDE_DC_YAML} )
    docker compose exec -T  ${main_service} $*
    ret=$?
    exit $ret
    ;;
  ovw)
    if [ "$2" = "push" ] ; then
    main_service=$(dc-yq '(( .projects.* | select(.project_dir == "'$project_dir'" ) ) | .dc.main_service  )' ${MDE_DC_YAML} )
      docker compose  exec ${main_service} rsync -av /service/ovw/ /
      exit 0
    fi
    if [ "$2" = "fetch" ] ; then
      if [ "$3" = "" ] ; then
        echo "parameter error: no dir/file given (see usage)"
        exit 0
      fi
      echo "rsync -avR ${3} /service/ovw/"
    main_service=$(dc-yq '(( .projects.* | select(.project_dir == "'$project_dir'" ) ) | .dc.main_service  )' ${MDE_DC_YAML} )
      docker compose  exec ${main_servicei} ync -avR ${3} /service/ovw/
      exit 0
    fi
    if [ "$2" = "fetch" ] ; then
    main_service=$(dc-yq '(( .projects.* | select(.project_dir == "'$project_dir'" ) ) | .dc.main_service  )' ${MDE_DC_YAML} )
       docker compose exec ${main_service} diff /service/ovw/${3} ${3}
       exit 0
    fi
    ;;
  #############
  docker)
    shift
    docker $*
    ;;
  compose|docker-compose)
    shift
    docker compose $*
    ;;
  swarm)
    echo "swarm command (have to be done)"
     ;;
  *)
    docker compose $* 
    ;;
esac
