#!/bin/bash

NODE="$1"
shift



CMD=$1
shift


eval "$(docker-machine env ${NODE})"

CNA=`( docker ps | grep "rdc-${NODE}." | cut -f1 -d" ") `

if [ "$CMD" = "" ] ; then
  docker exec -it $CNA bash
else
  if [ "$CMD" = "rdc" ] ; then
    #echo docker exec -t $CNA $CMD . $*
    docker      exec -t $CNA $CMD . $*
  else
    #echo docker exec -t $CNA $CMD  $*
    docker      exec -t $CNA $CMD  $*
  fi
fi
